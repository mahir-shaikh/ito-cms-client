        // &.col-2
        //     .goal-details
        //         background-color $accent03
        //     .goal-index
        //         background-color darken($accent03, 10)
            
    &-list
        max-width 100%
        &__note
            // font-size 0.9em
            // color $gray70
            margin 5px 0
            font-weight 600
            font-size 1.2em
            color $alt-color
            max-width 750px
    &-details
        display flex
        flex 1
        border-radius $radiusSmall
        @media screen and (-ms-high-contrast: black-on-white)
            border solid 1px black
        @media screen and (-ms-high-contrast: white-on-black)
            border solid 1px white
    &-index, &-icon
        display flex
        justify-content center
        align-items center
        padding 1.7em 2em
        border-top-left-radius $radiusSmall
        border-bottom-left-radius $radiusSmall
    &-index
        font-weight bold
        font-size 1.2em
    &-text
        flex 1
        display flex
        align-items center
        padding 1em 0 1em 1em
    &-selected
        font-style italic

.match
    cursor default
    margin 0 10px 10px 0

    &:last-child
        margin-bottom 0

.wrapper
    display flex
    padding 1em 0 25px

.invisible
    visibility hidden