.match-0
    background none
    
.match-details
    color $gray70

.goal-details
    color $white
    @media only screen and (max-width 1280px)
        font-size .9em

.goal, .match
    display flex
    &:not(:last-child)
        margin-bottom 10px
    cursor move
    &.fixedHeight
        height 10em
        @media only screen and (max-width 960px)
            height 13.5em
    &.cdk-drag-disabled
        background $gray50 !important
        pointer-events: none;
        .goal-details
            background none !important
        .goal-index
            background $gray50 !important
    &-container
        // padding-bottom 1em
        @media screen and (max-width 1280px)
            margin 1em
        ul
            list-style none
            padding 0
            margin 0
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            flex: 1;
            li.focus, li:focus
                outline 8px dashed $secondary
            &.flex-basis-30
                flex-basis 30%
        // &.col-0
        //     .goal-details
        //         background-color $primary
